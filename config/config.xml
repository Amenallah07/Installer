<?xml version="1.0" encoding="UTF-8"?>
<Installer>
    <Name>Sokinox</Name>
    <Version>1.0.0</Version>
    <Title>Sokinox Simulator Installer</Title>
    <Publisher>InoSystemes</Publisher>
    <StartMenuDir>sokinox</StartMenuDir>
    <TargetDir>@ApplicationsDirX86@/Sokinox</TargetDir>
    <MaintenanceToolName>SokinoxMaintenanceTool</MaintenanceToolName>
    <AllowNonAsciiCharacters>true</AllowNonAsciiCharacters>
    <AllowSpaceInPath>true</AllowSpaceInPath>
    <WizardStyle>Modern</WizardStyle>
    <InstallerWindowIcon>icon.ico</InstallerWindowIcon>
    <InstallerApplicationIcon>icon.ico</InstallerApplicationIcon>
    <Logo>logo.png</Logo>
    <RunProgram>"@TargetDir@/chocolat.bat"</RunProgram>
    <RunProgramDescription>Launch Sokinox Simulator</RunProgramDescription>
</Installer>
